  "files": [
    "dist/"
  ],
  "keywords": [
    "json-transform"
  ],
  "author": "Eli Sherer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nlighten-oss/json-transform/issues"
  },
  "homepage": "https://github.com/nlighten-oss/json-transform#readme",
  "peerDependencies": {
    "@nlighten/json-schema-utils": "^1.0.0"
  },
  "devDependencies": {
    "@nlighten/json-schema-utils": "^1.0.0",
    "microbundle": "^0.15.1",
    "prettier": "3.1.1",
    "typescript": "^5.3.3",
    "vitest": "1.2.2"
  }
}