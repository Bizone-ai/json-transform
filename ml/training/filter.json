{
  "filters the input array by truthiness of the elements, using inline definition (inline form)": "$$filter(##current):$",
  "filters the input array by truthiness of the elements (object form)": {
    "$$filter": "$",
    "by": "##current"
  },
  "filters the input array by whether the elements are explicitly boolean (object form)": {
    "$$filter": "$",
    "by": "$$boolean:##current"
  },
  "filters the input array by whether the elements' names start with 'a' (object form)": {
    "$$filter": "$",
    "by": "$$test(^a):##current.name"
  }
}