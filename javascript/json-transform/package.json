    "js-yaml": "^4.1.0",
    "json-pointer": "^0.6.2",
    "jsonpath": "^1.1.1",
    "lossless-json": "^4.0.2",
    "nodemon": "^3.1.7",
    "prettier": "3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
